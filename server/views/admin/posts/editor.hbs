<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/posts">Posts</a></li>
        <li class="breadcrumb-item active" aria-current="page">
            {{# if post.id }}
            {{ post.title }}
            {{else}}
            New
            {{/if}}
        </li>
    </ol>
</nav>

<form action="{{ action }}" method="POST">
    {{# if message }}
    <div class="alert alert-dark">{{ message }}</div>
    {{/if}}
    <div class="form-group">
        <label for="title">title</label>
        <input type="text" name="title" id="title" class="form-control" value="{{ post.title }}" aria-required="true" required>
    </div>
    <div class="form-group">
        {{!-- now for body --}}
        <label for="body">body</label>
        <br>
        <textarea style="width:100%" name="body" id="body" class="form-control" value="{{ post.body }}" aria-required="true" required minlength="1">{{{ post.body }}}</textarea>
    </div>
    <div class="form-group">
        {{!-- now for publishAt --}}
        <label for="publishAt">publishAt</label>
        <small class="form-text text-muted">Enter the date in the format YYYY-MM-DD</small>
        <input type="text" name="publishAt" id="publishAt" class="form-control" value="{{ post.publishAt }}" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
        <br>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/admin/posts" class="btn btn-secondary">Back</a>
</form>
{{# if post.id }}
<hr>
<form action="{{ action }}/delete" method="POST" onsubmit="return confirm('Are you sure?')">
<button type="submit" class="btn btn-sm btn-danger">Delete</button>
</form>
{{/if}}